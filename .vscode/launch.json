{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Vite Dev",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev", "--", "--port", "3000"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/ui/"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/ui",
      "preLaunchTask": "npm: dev",
      "serverReadyAction": {
        "pattern": "Local:   http://localhost:([0-9]+)/",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      }
    },
    {
      "type": "python",
      "request": "launch",
      "name": "Launch Python Server",
      "module": "uvicorn",
      "args": ["server.main:app", "--reload"],
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Vite + Chrome",
      "configurations": ["Launch Vite Dev", "Launch Chrome"]
    },
    {
      "name": "Full Stack",
      "configurations": ["Launch Vite Dev", "Launch Chrome", "Launch Python Server"]
    }
  ]
}